{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/App.js"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application"
    },
    "3500": {
      "label": "JSON Server",
      "requireLocalPort": false
    }
  },
  "forwardPorts": [3000, 3500]
}
