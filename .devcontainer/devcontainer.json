{
  "image": "mcr.microsoft.com/devcontainers/universal:2",
  "hostRequirements": {
    "cpus": 4
  },
  "waitFor": "onCreateCommand",
  "updateContentCommand": "npm install",
  "postCreateCommand": "",
  "postAttachCommand": {
    "server": "npm start",
    "jsonServer": "npx json-server -p 3500 data/db.json",
    "openPort3500": "gh codespace ports visibility 3500:public -c $CODESPACE_NAME && exit"
  },
  "customizations": {
    "codespaces": {
      "openFiles": [
        "src/App.js"
      ]
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application"
    },
    "3500": {
      "label": "JSON Server"
    }
  },
  "forwardPorts": [3000, 3500]
}
